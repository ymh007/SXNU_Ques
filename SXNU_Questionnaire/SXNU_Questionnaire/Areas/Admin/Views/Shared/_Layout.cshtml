<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>陕师大-智能测评系统</title>
    <meta name="keywords" content="{$SEO['index_keyword']}">
    <meta name="description" content="{$SEO['index_description']}">
    @Styles.Render("~/Content/admin/PageCss")
    @Scripts.Render("~/js/Common")
    @Scripts.Render("~/js/admin/Page")
</head>

<body class="admin">
    <div id="MaskMain">
        @{
            SXNU_Questionnaire.Areas.Admin.Models.UserInfo User = (SXNU_Questionnaire.Areas.Admin.Models.UserInfo)Session["UserInfo"];
        }
        <div class="admin_header p-l35">
            <div class="left p-t10 p-b8 "><img src="~/Content/images/admin/admin_logo1.png"></div>
            <div class="right admin_out">
                <ul>
                    <li><a href="/admin/User/ChangePWD"><img title="修改密码" src="~/Content/images/admin/ico4.png"></a></li>
                    <li><a href="/admin/Login/Login"><img title="退出" src="~/Content/images/admin/ico5.png"></a></li>
                </ul>
            </div>
            <div class="right admin_tele m-t22 m-r25">@User.U_LoginName</div>

            <div class="clear"></div>
        </div>
        <div class="left admin_left p-w8">

            <input type="hidden" id="golName" value="@User.U_Name" />
            <input type="hidden" id="golUserID" value="@User.U_ID" />
            <input type="hidden" id="golUserRole" value="@User.U_Role" />
            <input type="hidden" id="golUserLogin" value="@User.U_LoginName" />
            <div class="menu">
                <ul>
                    @if (ViewBag.flgStyle == "q")
                    {
                        <li class="menu_hover">
                            <a class="hide p-t25 p-b25 font_18" href="#"><div class="m-b20"><img src="~/Content/images/admin/ico1.png"></div>问卷管理</a>
                            <ul>
                                <li><a href="/admin/Question/Step1?ID=0" title="#">创建问卷</a></li>
                                <li><a href="/admin/Question/QuesList" title="#">问卷管理列表</a></li>
                            </ul>
                        </li>
                        if (User.U_Role == "0")
                        {
                            <li>
                                <a class="hide p-t25 p-b25 font_18" href="#"><div class="m-b20"><img src="~/Content/images/admin/ico2.png"></div>账号管理</a>
                                <ul>
                                    <li><a href="/admin/User/AccountCreate" title="">创建账号</a></li>
                                    <li><a href="/admin/User/AccountManage" title="">账号管理列表</a></li>
                                </ul>
                            </li>
                            <li>
                                <a class="hide p-t25 p-b25 font_18" href="#"><div class="m-b20"><img src="~/Content/images/admin/ico3.png"></div>通知管理</a>
                                <ul>
                                    <li><a href="/admin/Notice/CreateNotice" title="">发布通知</a></li>
                                    <li><a href="/admin/Notice/NoticeList" title="">通知管理列表</a></li>
                                </ul>
                            </li>
                        }

                    }
                    else if (ViewBag.flgStyle == "a")
                    {
                        <li>
                            <a class="hide p-t25 p-b25 font_18" href="#"><div class="m-b20"><img src="~/Content/images/admin/ico1.png"></div>问卷管理</a>
                            <ul>
                                <li><a href="/admin/Question/Step1?ID=0" title="#">创建问卷</a></li>
                                <li><a href="/admin/Question/QuesList" title="#">问卷管理列表</a></li>
                            </ul>
                        </li>
                        if (User.U_Role == "0")
                        {
                            <li class="menu_hover">
                                <a class="hide p-t25 p-b25 font_18" href="/admin/User/AccountCreate"><div class="m-b20"><img src="~/Content/images/admin/ico2.png"></div>账号管理</a>
                                <ul>
                                    <li><a href="/admin/User/AccountCreate" title="">创建账号</a></li>
                                    <li><a href="/admin/User/AccountManage" title="">账号管理列表</a></li>
                                </ul>
                            </li>
                            <li>
                                <a class="hide p-t25 p-b25 font_18" href="#"><div class="m-b20"><img src="~/Content/images/admin/ico3.png"></div>通知管理</a>
                                <ul>
                                    <li><a href="/admin/Notice/CreateNotice" title="">发布通知</a></li>
                                    <li><a href="/admin/Notice/NoticeList" title="">通知管理列表</a></li>
                                </ul>
                            </li>}
                    }
                    else
                    {
                        <li>
                            <a class="hide p-t25 p-b25 font_18" href="#"><div class="m-b20"><img src="~/Content/images/admin/ico1.png"></div>问卷管理</a>
                            <ul>
                                <li><a href="/admin/Question/Step1?ID=0" title="#">创建问卷</a></li>
                                <li><a href="/admin/Question/QuesList" title="#">问卷管理列表</a></li>
                            </ul>
                        </li>
                        if (User.U_Role == "0")
                        {
                            <li>
                                <a class="hide p-t25 p-b25 font_18" href="/admin/User/AccountManage"><div class="m-b20"><img src="~/Content/images/admin/ico2.png"></div>账号管理</a>
                                <ul>
                                    <li><a href="/admin/User/AccountCreate" title="">创建账号</a></li>
                                    <li><a href="/admin/User/AccountManage" title="">账号管理列表</a></li>
                                </ul>
                            </li>
                            <li class="menu_hover">
                                <a class="hide p-t25 p-b25 font_18" href="/admin/Notice/CreateNotice"><div class="m-b20"><img src="~/Content/images/admin/ico3.png"></div>通知管理</a>
                                <ul>
                                    <li><a href="/admin/Notice/CreateNotice" title="">发布通知</a></li>
                                    <li><a href="/admin/Notice/NoticeList" title="">通知管理列表</a></li>
                                </ul>
                            </li>
                        }
                    }

                </ul>
            </div>
        </div>

        @RenderBody()

        @RenderSection("scripts", required: false)

    </div>

</body>

</html>