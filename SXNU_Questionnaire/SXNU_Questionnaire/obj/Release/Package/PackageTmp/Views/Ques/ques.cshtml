@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "问卷中心";
    ViewBag.flgStyle = "ques";
}
<script type="text/javascript">
    $(function () {
        var pageModel = new SXNU_ViewModel_Index_Ques($);
        ko.applyBindings(pageModel, $("#QuestionPage")[0]);
    });
</script>
<style>
    .waik {
        padding: 20px;
        margin: 30px;
    }

    .paging li {
        float: left;
        margin-right: 5px;
        line-height: 30px;
    }

    .paging a {
        display: block;
        height: 30px;
        border-radius: 3px;
        font-size: 14px;
        padding: 0 10px;
        border: 1px solid #dadce3;
        background: #FFF;
        color: #666666;
    }

        .paging a:hover {
            border: 1px solid #8b0100;
            background: #8b0100;
            color: #FFF;
        }

    .paging .a_active {
        border: 1px solid #8b0100;
        background: #8b0100;
        color: #FFF;
    }
</style>
<div class="show_h"></div>
<div class="wrapper m-t30 m-b80" id="QuestionPage">
   
    <div id="row_list">
        
    </div>
    <div style="min-height:500px;"  data-bind="visible:$root.am_TotalPage()==0?true:false">无记录</div>
    <div class="waik" data-bind="visible:$root.am_TotalPage()==0?false:true">
        <ul class="paging">
            <li><a href="#" data-bind="visible:$root.am_CurrenPageIndex()!=0,click:$root.Provider">上一页</a></li>
            <li><a href="javascript:void(0)" data-bind="visible:$root.am_CurrenPageIndex()!=0,text:$root.am_CurrenPageIndex(),click:function(){$root.GotoPage($root.am_CurrenPageIndex()-1)} ">1</a></li>
            <li><a class="a_active" data-bind="text:$root.am_CurrenPageIndex()+1">2</a></li>
            <li><a href="javascript:void(0)" data-bind="visible:$root.am_CurrenPageIndex()!=($root.am_TotalPage()-1),text:$root.am_CurrenPageIndex()+2,click: function(){ $root.GotoPage($root.am_CurrenPageIndex()+1) }  ">3</a></li>
            <li><a href="#" data-bind="visible:$root.am_CurrenPageIndex()!=($root.am_TotalPage()-1),click:$root.NextPage">下一页</a></li>
        </ul>
        <div class="clear"></div>

    </div>
</div>
